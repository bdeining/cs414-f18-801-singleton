<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs">

    <reference id="mySqlHandler" interface="edu.colostate.cs.cs414.p3.bdeining.api.MySqlHandler"/>

    <bean id="dataHandlerEndpoint"
          class="edu.colostate.cs.cs414.p3.bdeining.rest.RestService">
        <argument ref="mySqlHandler"/>
    </bean>

    <jaxrs:server id="resourceOrderingService" address="/rest">
        <jaxrs:serviceBeans>
            <ref component-id="dataHandlerEndpoint"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

</blueprint>